@model ProductoModel

<form asp-controller="Home" asp-action="ProductosAdd" method="post">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre del producto</label>
        <input type="text" class="form-control" id="nombre" asp-for="NombreProd" placeholder="Escriba el producto" />
    </div>
    <div class="mb-3">
        <label for="marca" class="form-label">Marca</label>
        <input type="text" class="form-control" id="marca" asp-for="Marca" placeholder="Escriba la marca" />
    </div>
    <div class="mb-3">
        <label for="cantidad" class="form-label">Cantidad</label>
        <input type="text" class="form-control" id="cantidad" asp-for="Cantidad" placeholder="Escriba la cantidad" />
    </div>
    <div class="mb-3">
        <label for="precio" class="form-label">Precio</label>
        <input type="text" class="form-control" id="precio" asp-for="Precio" placeholder="Escriba el precio" />
    </div>
    <div class="mb-3">
        <label for="categoria" class="form-label">Categoría</label>
        <select class="form-control" id="categoria" asp-for="CategoriaId" asp-items="Model.ListCategorias">
            <option value="">Seleccione una categoría</option>
        </select>
    </div>
    <button type="submit" class="btn btn-outline-primary me-2">Guardar</button>
    <a asp-controller="Home" asp-action="Productos" class="btn btn-outline-secondary">Regresar</a>
</form>
