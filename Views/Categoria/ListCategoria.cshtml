@model List<CategoriaModel>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4"><i><b>LISTA DE CATEGORIAS</b></i></h1>
        <a asp-controller="Categoria" asp-action="CategoriaAdd" class="btn btn-primary mb-3">Agregar Categoria</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Acciones</th>
                     <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-outline-primary" asp-controller="Categoria" asp-action="CategoriaEdit" asp-route-Id="@cat.Id">Editar</a>
                                <span class="mx-1"></span>
                                <a class="btn btn-outline-danger" asp-controller="Categoria" asp-action="CategoriaShowToDelete" asp-route-Id="@cat.Id">Borrar</a>
                            </div>
                        </td>
                        <td>@cat.NombreCat</td>
                        <td>@cat.Descripcion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>